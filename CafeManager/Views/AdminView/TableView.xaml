<UserControl
    x:Class="CafeManager.WPF.Views.AdminView.TableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:CafeManager.WPF.Services.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    Name="tableview"
    d:DesignHeight="740"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Margin="0,20,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Command="{Binding AddTableCommand}"
            Content="Thêm bàn mới" />
        <Border
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderThickness="5"
            CornerRadius="10">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0, 0.5">
                    <GradientStop Offset="0" Color="#c69a5d" />
                    <GradientStop Offset="0.5" Color="#cb925d" />

                    <GradientStop Offset="1" Color="#d4b096" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <ScrollViewer
                VerticalAlignment="Top"
                HorizontalScrollBarVisibility="Hidden"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ListTable}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel
                                MinWidth="990"
                                MinHeight="555"
                                MaxWidth="1100" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="10"
                                Padding="10"
                                BorderBrush="Wheat"
                                BorderThickness="2"
                                CornerRadius="10">
                                <StackPanel Width="120">
                                    <Border>
                                        <Image
                                            Height="auto"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            SnapsToDevicePixels="True"
                                            Source="/Assets/Images/coffee.png"
                                            Stretch="UniformToFill" />
                                    </Border>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{Binding Tablename}"
                                            TextWrapping="WrapWithOverflow" />
                                        <materialDesign:PopupBox
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            PopupUniformCornerRadius="10"
                                            StaysOpen="True">
                                            <StackPanel>
                                                <Button Content="Xóa" />
                                                <Button Content="Thông tin chi tiết" />
                                            </StackPanel>
                                        </materialDesign:PopupBox>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>