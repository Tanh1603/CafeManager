<UserControl
    x:Class="CafeManager.WPF.Views.AdminView.TableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <StackPanel Margin="20">
            <Button
                HorizontalAlignment="Right"
                Command="{Binding AddTableCommand}"
                Content="Thêm bàn mới" />
            <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
                <Border BorderBrush="Firebrick" BorderThickness="5">
                    <ItemsControl ItemsSource="{Binding ListTable}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel MaxWidth="990" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="20"
                                    BorderBrush="Brown"
                                    BorderThickness="2">
                                    <StackPanel>
                                        <Image
                                            Width="120"
                                            Height="100"
                                            Source="/Assets/Images/coffee.png"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Tablename}" />
                                        <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Statustable}" />
                                        <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Notes}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>