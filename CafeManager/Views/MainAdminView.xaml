<UserControl x:Class="CafeManager.WPF.Views.MainAdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
       
             mc:Ignorable="d" 
             Height="740" Width="1280">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30"
                       ShadowDepth="1"
                       Opacity="0.4"/>
        </Grid.Effect>
        <!--left menu-->
        <Border CornerRadius="10 0 0 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#824618" Offset="0"/>
                    <GradientStop Color="#844518" Offset="1"/>

                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <!--username-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin=" -10 35 0 0">
                    <Border  CornerRadius="50" Width="45" Height="44" >
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="#d5b096" Offset="0"/>
                                <GradientStop Color="#d3b7ff" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Image Source="/Assets/Images/coffee.png" Width="30" Height="30" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"/>

                    </Border>

                    <StackPanel Margin="10 0 0 0 " VerticalAlignment="Center">
                        <TextBlock Text="Quách Vĩnh Cơ" FontSize="15" Margin="0 0 0 5" Foreground="#f9f9f9"/>
                        <TextBlock Text="Admin" FontSize="15" Foreground="#ffffff" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
                <Separator Height="0.8" Margin="20 30 " Background="#ffffff"/>

                <!--menu buttons-->
                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="ChartColumn" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Thống kê" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="MartiniGlassCitrus" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Nước uống" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="FileInvoice" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Hóa đơn" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="TableCells" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Bàn" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="ShoppingCart" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Nhập kho" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Warehouse" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Tồn kho" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Truck" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Nhà cung cấp" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Cog" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Cài đặt" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="PowerOff" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Đăng xuất" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>

            </StackPanel>
        </Border>

        <!--main section-->
        <Border Grid.Column="1"  CornerRadius="0 10 10 0" >
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="#9c6d3f" Offset="0"/>
                    <GradientStop Color="#cb925d" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="50 0 40 40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                   

                </Grid.RowDefinitions>

                <!--icon app-->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top"  HorizontalAlignment="Right" Margin="0 10 -20 0">
                    <ma:PackIconMaterial x:Name="closeIcon"  Kind="Minus" Margin="0 8 15 0 " Style="{StaticResource ìconApp}" MouseLeftButtonUp="closeIcon_MouseLeftButtonUp"/>
                    <ma:PackIconMaterial x:Name="minimizeIcon" Kind="Close" Style="{StaticResource ìconApp}" MouseLeftButtonUp="minimizeIcon_MouseLeftButtonUp"/>
                </StackPanel>

                <!--textbox search-->
                <Grid Width="300" HorizontalAlignment="Left">
                    <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#9c6d3f" IsHitTestVisible="False" 
                                Panel.ZIndex="1" Text="Tìm kiếm ở đây..."
                            Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>
                    <TextBox x:Name="txtSearch" Style="{StaticResource textBoxSearch}"/>
                    <ma:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                            Margin="0 0 15 0" Foreground="#d5b096" HorizontalAlignment="Right"/>
                </Grid>

                <!--Page Title-->
                <TextBlock Text="Nhà cung cấp" Grid.Row="1" FontSize="32" FontWeight="SemiBold" Margin="0 20 0 0"
HorizontalAlignment="Left" Foreground="#dac5b4"/>

                <!--Add Button-->
                <Button Style="{StaticResource addButton}">
                    <StackPanel Orientation="Horizontal">
                        <ma:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                        <TextBlock Text="Thêm nhà cung cấp"/>
                    </StackPanel>
                </Button>

                <Separator Height="1" Width="200" HorizontalAlignment="Left" Grid.Row="2" Margin="0 10 0 0" Background="#f5f5f5" />

               

                <TextBlock Text="Filter by" Grid.Row="3" FontSize="13" FontWeight="SemiBold" Margin="0 0 215 0"
     Foreground="#602414" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                <!--Filter Textbox-->
                <Grid Width="200" HorizontalAlignment="Right" Grid.Row="3" Margin="0 20">
                    <TextBlock Margin="15 0" VerticalAlignment="Center" Foreground="#9c6d3f" IsHitTestVisible="False"
         Panel.ZIndex="1" Text="Search in Members..."
         Visibility="{Binding ElementName=txtFilter, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>
                    <TextBox x:Name="txtFilter" Style="{StaticResource textBoxFilter}"/>
                    <ma:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
        Margin="0 0 15 0" Foreground="#d5b096" HorizontalAlignment="Right"/>

                </Grid>

                <!--Supplier Datagrid-->
                <Border Grid.Row="4"  CornerRadius="10" Margin="0 10 0 0" Padding="8 0 3 0" BorderThickness="2" BorderBrush="#602414">


                    <DataGrid Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"  Grid.Row="4" RowStyle="{DynamicResource DataGridRowStyle1}" x:Name="SuppliersDataGrid"  VerticalAlignment="Top">
                        <DataGrid.Columns>


                            <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Number}"/>

                            <DataGridTemplateColumn Header="Tên" IsReadOnly="True" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="25" Height="25" CornerRadius="50" Margin="0 0 10 0" Background="{Binding BgColor}">
                                                <TextBlock Text="{Binding Character}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#612e0f" Margin="0 0 0 1"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <DataGridTextColumn Header="SĐT" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Phone}"/>
                            <DataGridTextColumn Header="Email" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Email}"/>
                            <DataGridTextColumn Header="Địa chỉ" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Address}"/>

                            <DataGridTemplateColumn Header="Tùy chỉnh" IsReadOnly="True" Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{StaticResource gridEditButton}">
                                                <ma:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                            <Button Style="{StaticResource gridRemoveButton}" Margin="5 0 0 0">
                                                <ma:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

              




            </Grid>

        </Border>
    </Grid>
</UserControl>
