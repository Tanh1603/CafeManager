<UserControl
    x:Class="CafeManager.WPF.Views.AdminView.InventoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:addview="clr-namespace:CafeManager.WPF.Views.AddUpdateView"
    xmlns:adminviews="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:CafeManager.WPF.Services.Converter"
    xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    xmlns:view="clr-namespace:CafeManager.WPF.Views"
    xmlns:vm="clr-namespace:CafeManager.WPF.ViewModels.AddViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <service:RowIndexConverter x:Key="RowIndexConverter" />
        <DataTemplate DataType="{x:Type vm:AddMaterialViewModel}">
            <addview:AddMaterialView />
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="20,10">
            <Grid.RowDefinitions>

                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Page Title  -->
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Left"
                FontSize="32"
                FontWeight="SemiBold"
                Foreground="#ddd1c3"
                Text="Tồn kho" />

            <Separator
                Grid.Row="0"
                Width="120"
                Height="1"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#f5f5f5" />

            <TextBlock
                Grid.Row="1"
                Margin="0,0,215,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#602414"
                Text="Filter by" />

            <!--  Filter Textbox  -->
            <Grid
                Grid.Row="1"
                Width="200"
                HorizontalAlignment="Right">
                <TextBlock
                    Margin="15,0"
                    VerticalAlignment="Center"
                    Panel.ZIndex="1"
                    Foreground="#9c6d3f"
                    IsHitTestVisible="False"
                    Text="Search in Members..."
                    Visibility="{Binding ElementName=txtFilter, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}" />
                <TextBox x:Name="txtFilter"
                         Style="{StaticResource textBoxFilter}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <ma:PackIconMaterial
                    Width="15"
                    Height="15"
                    Margin="0,0,15,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#d5b096"
                    Kind="Magnify" />
            </Grid>

            <Grid
                Grid.Row="1"
                Margin="10,10,0,10"
                HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    Width="15"
                    Height="15"
                    Margin="0,5,10,0"
                    VerticalAlignment="Center"
                    Command="{Binding ChangeRoleMaterialCommand}"
                    Style="{StaticResource closeButton}">

                    <ma:PackIconMaterial
                        Width="15"
                        Height="15"
                        Kind="Repeat"
                        Style="{StaticResource iconApp}" />
                </Button>

                <Grid Grid.Column="1" Visibility="{Binding IsGetMaterial, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="150" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <ComboBox
                        Grid.Column="0"
                        MinWidth="150"
                        MinHeight="35"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Vật liệu"
                        materialDesign:TextBlockAssist.AutoToolTip="True"
                        BorderBrush="#602414"
                        ItemsSource="{Binding ListMaterialDTO}"
                        SelectedItem="{Binding SelectedMaterial}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding Materialname}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button
                        Grid.Column="1"
                        Width="60"
                        Height="35"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Command="{Binding OpenPopupMaterialViewCommand}"
                        Style="{StaticResource confirmInfoButton}">
                        <materialDesign:PopupBox
                            Grid.Row="2"
                            Margin="4"
                            IsPopupOpen="{Binding IsPopupOpen, Mode=TwoWay}"
                            PopupElevation="Dp4"
                            PopupHorizontalOffset="40"
                            PopupUniformCornerRadius="10"
                            StaysOpen="True">
                            <materialDesign:PopupBox.ToggleContent>
                                <Button
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    Command="{Binding DataContext.OpenPopupMaterialViewCommand, RelativeSource={RelativeSource AncestorType=local:InventoryView}}"
                                    Style="{StaticResource confirmInfoButton}">
                                    <materialDesign:PackIcon
                                        Width="30"
                                        Height="30"
                                        Foreground="White"
                                        Kind="Plus" />
                                </Button>
                            </materialDesign:PopupBox.ToggleContent>
                            <StackPanel>
                                <Button
                                    Command="{Binding OpenAddMaterialCommand}"
                                    Content="Thêm vật liệu"
                                    Style="{StaticResource confirmInfoButton}" />
                                <Button
                                    Command="{Binding DeleteMaterialCommand}"
                                    Content="Ẩn vật liệu"
                                    Style="{StaticResource confirmInfoButton}" />
                                <Button
                                    Command="{Binding OpenUpdateMaterialCommand}"
                                    Content="Sửa vật liệu"
                                    Style="{StaticResource confirmInfoButton}" />
                            </StackPanel>
                        </materialDesign:PopupBox>
                    </Button>
                </Grid>

                <!--  Vật liệu đã ẩn  -->
                <Grid Grid.Column="1" Visibility="{Binding IsDeletedMaterial, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="150" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <ComboBox
                        Grid.Column="0"
                        MinWidth="150"
                        MinHeight="35"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Vật liệu đã ẩn"
                        materialDesign:TextBlockAssist.AutoToolTip="True"
                        BorderBrush="#602414"
                        ItemsSource="{Binding ListDeletedMaterialDTO}"
                        SelectedItem="{Binding SelectedMaterial}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding Materialname}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button
                        Grid.Column="1"
                        Width="60"
                        Height="35"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Command="{Binding RestoreMaterialCommand}"
                        Content="Hiển thị"
                        Style="{StaticResource confirmInfoButton}" />
                </Grid>
            </Grid>

            <Border Grid.Row="2">
                <TabControl Style="{DynamicResource tabControlStyle}">
                    <TabItem Header="Đã dùng" Style="{DynamicResource tabItemStyle}">

                        <DataGrid
                            x:Name="SuppliersDataGrid"
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding CurrentListConsumedMaterial.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding CurrentListConsumedMaterial}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Material.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Supplier.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Manufacturedate}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Expirationdate}"
                                    CanUserResize="False"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Quantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Header="Số lượng sử dụng"
                                    IsReadOnly="True" />

                                <DataGridTemplateColumn
                                    Width="auto"
                                    Header="Tùy chỉnh"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button
                                                    Command="{Binding DataContext.OpenModifyConsumed_UpdateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource gridEditButton}">
                                                    <ma:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}" />
                                                </Button>
                                                <Button
                                                    Margin="5,0,0,0"
                                                    Command="{Binding DataContext.DeleteConsumedMaterialCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource gridRemoveButton}">
                                                    <ma:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}" />
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Tồn kho" Style="{DynamicResource tabItemStyle}">
                        <DataGrid
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding CurrentListInventory.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding CurrentListInventory}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Material.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Supplier.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturedate}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Expirationdate}"
                                    CanUserResize="False"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalQuantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Header="Số lượng"
                                    IsReadOnly="True" />
                                <DataGridTemplateColumn
                                    Width="auto"
                                    Header="Dùng"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.OpenModifyConsumed_AddCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource gridEditButton}">
                                                <ma:PackIconMaterial Kind="Minus" Style="{StaticResource gridButtonIcon}" />
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <materialDesign:DialogHost
            Grid.ColumnSpan="2"
            Background="Transparent"
            DialogTheme="Inherit"
            IsOpen="{Binding IsOpenAddMaterial}"
            OverlayBackground="{DynamicResource PrimaryHueDarkBrush}"
            Style="{StaticResource MaterialDesignEmbeddedDialogHost}">

            <materialDesign:DialogHost.DialogBackground>
                <SolidColorBrush Color="Transparent" />
            </materialDesign:DialogHost.DialogBackground>

            <materialDesign:DialogHost.DialogContent>
                <ContentControl Content="{Binding ModifyMaterialVM}" />
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost ClipToBounds="False" IsOpen="{Binding IsOpenModifyConsumed}">
            <materialDesign:DialogHost.DialogBackground>
                <SolidColorBrush Color="Transparent" />
            </materialDesign:DialogHost.DialogBackground>

            <materialDesign:DialogHost.DialogContent>
                <Border
                    Grid.Column="0"
                    BorderBrush="#602414"
                    BorderThickness="4"
                    CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Offset="0" Color="#d4b096" />
                            <GradientStop Offset="1" Color="#dac5b4" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Button
                            Grid.Row="0"
                            Margin="0,10"
                            HorizontalAlignment="Right"
                            Command="{Binding CloseModifyConsumedCommand}"
                            Style="{StaticResource closeButton}">
                            <ma:PackIconMaterial Kind="Close" Style="{StaticResource iconApp}" />
                        </Button>
                        <TextBlock
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="#5f2414"
                            Text="Thông tin sử dụng vật liệu" />
                        <Grid
                            Grid.Row="2"
                            Margin="10,10,10,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Style="{StaticResource infoText}"
                                Text="Số lượng " />

                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="140"
                                VerticalAlignment="Center"
                                Text="{Binding ModifyConsumedMaterial.Quantity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                        </Grid>

                        <Button
                            Grid.Row="3"
                            Margin="10,20"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Command="{Binding SubmitConsumedMaterialCommand}"
                            Style="{StaticResource adjustInfoButton}">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock Text="Xác nhận" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>