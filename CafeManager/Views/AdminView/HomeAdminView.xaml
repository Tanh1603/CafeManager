                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Usage" Labels="{Binding LabelsStackRow}" />
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Border>-->
                </Grid>

