<UserControl
    x:Class="CafeManager.WPF.Views.AdminView.InventoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:CafeManager.WPF.Services.Converter"
    xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    xmlns:view="clr-namespace:CafeManager.WPF.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <service:RowIndexConverter x:Key="RowIndexConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid Margin="20,10">
            <Grid.RowDefinitions>

                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Page Title  -->
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Left"
                FontSize="32"
                FontWeight="SemiBold"
                Foreground="#ddd1c3"
                Text="Tồn kho" />

            <Separator
                Grid.Row="0"
                Width="120"
                Height="1"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#f5f5f5" />

            <TextBlock
                Grid.Row="1"
                Margin="0,0,215,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#602414"
                Text="Filter by" />

            <!--  Filter Textbox  -->
            <Grid
                Grid.Row="1"
                Width="200"
                HorizontalAlignment="Right">
                <TextBlock
                    Margin="15,0"
                    VerticalAlignment="Center"
                    Panel.ZIndex="1"
                    Foreground="#9c6d3f"
                    IsHitTestVisible="False"
                    Text="Search in Members..."
                    Visibility="{Binding ElementName=txtFilter, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}" />
                <TextBox x:Name="txtFilter" Style="{StaticResource textBoxFilter}" />
                <ma:PackIconMaterial
                    Width="15"
                    Height="15"
                    Margin="0,0,15,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#d5b096"
                    Kind="Magnify" />
            </Grid>

            <Border Grid.Row="2">
                <TabControl Style="{DynamicResource tabControlStyle}">
                    <TabItem Header="Đã dùng" Style="{DynamicResource tabItemStyle}">

                        <DataGrid
                            x:Name="SuppliersDataGrid"
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding ListConsumedMaterialDTO.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding ListConsumedMaterialDTO}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MaterialSupplierDTO.MaterialDTO.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MaterialSupplierDTO.SupplierDTO.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MaterialSupplierDTO.Manufacturedate}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MaterialSupplierDTO.Expirationdate}"
                                    CanUserResize="False"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MaterialSupplierDTO.Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MaterialSupplierDTO.Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MaterialSupplierDTO.Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Quantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Header="Số lượng sử dụng"
                                    IsReadOnly="True" />

                                <DataGridTemplateColumn
                                    Width="auto"
                                    Header="Tùy chỉnh"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button
                                                    Command="{Binding DataContext.OpenUpdateImportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource gridEditButton}">
                                                    <ma:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}" />
                                                </Button>
                                                <Button
                                                    Margin="5,0,0,0"
                                                    Command="{Binding DataContext.DeleteConsumedMaterialCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource gridRemoveButton}">
                                                    <ma:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}" />
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Tồn kho" Style="{DynamicResource tabItemStyle}">
                        <DataGrid
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding ListInventoryDTO.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding ListInventoryDTO}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MaterialDTO.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding SupplierDTO.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturedate}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Expirationdate}"
                                    CanUserResize="False"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalQuantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Header="Số lượng"
                                    IsReadOnly="True" />

                                <DataGridTemplateColumn
                                    Width="auto"
                                    Header="Sử dụng"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Height="20"
                                                Width="20"
                                                HorizontalAlignment="Left"
                                                Command="{Binding OpenPopup_AddCommand}"
                                                Style="{StaticResource confirmInfoButton}">
                                                <materialDesign:PopupBox
                                                    Grid.Row="2"
                                                    Margin="4"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0"
                                                    IsPopupOpen="{Binding IsPopupOpen}"
                                                    PlacementMode="RightAndAlignMiddles"
                                                    PopupElevation="Dp4"
                                                    PopupHorizontalOffset="40"
                                                    PopupUniformCornerRadius="10"
                                                    StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <Button
                                                            Height="10"
                                                            Width="15"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Background="Transparent"
                                                            Command="{Binding DataContext.OpenPopup_AddCommand, RelativeSource={RelativeSource AncestorType=local:InventoryView}}"
                                                            Style="{StaticResource confirmInfoButton}">
                                                            <materialDesign:PackIcon
                                                                Width="30"
                                                                Height="20"
                                                                Foreground="White"
                                                                Kind="Minus" />
                                                        </Button>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.PopupContent>
                                                        <StackPanel Margin="10,0">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="auto" />
                                                                    <RowDefinition Height="auto" />
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock
                                                                    Grid.Row="0"
                                                                    Style="{StaticResource infoText}"
                                                                    Text="Số lượng:" />
                                                                <uc:infoTextInput
                                                                    Grid.Row="0"
                                                                    Grid.Column="1"
                                                                    MinWidth="140"
                                                                    Focusable="True"
                                                                    Text="{Binding DataContext.ConsumedQuantity, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=local:ImportView}, Mode=TwoWay}"/>

                                                            </Grid>
                                                            <Button
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Bottom"
                                                                Command="{Binding ModifyConsumedMaterialCommand}"
                                                                Style="{StaticResource confirmInfoButton}">
                                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                                    <ma:PackIconMaterial VerticalAlignment="Center" Kind="CheckBold" />
                                                                    <TextBlock
                                                                        Margin="10,0,0,0"
                                                                        FontWeight="SemiBold"
                                                                        Text="Xác nhận" />
                                                                </StackPanel>
                                                            </Button>
                                                        </StackPanel>
                                                    </materialDesign:PopupBox.PopupContent>
                                                </materialDesign:PopupBox>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!--<materialDesign:DialogHost
           Background="Transparent"
           CloseOnClickAway="True"
           DialogTheme="Inherit"
           IsOpen="{Binding IsOpenAddSupplier}"
           OverlayBackground="{DynamicResource PrimaryHueDarkBrush}"
           Placement="Mouse"
           Style="{StaticResource MaterialDesignEmbeddedDialogHost}">
            <materialDesign:DialogHost.DialogContent>
                <ContentControl Content="{Binding AddSupplierVM}" />
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>-->
    </Grid>
</UserControl>