<Window
    x:Class="CafeManager.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:CafeManager.WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:CafeManager.WPF.Views"
    Title="MainWindow"
    Width="1350"
    MinHeight="750"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="none"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Background="White">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <i:InvokeCommandAction Command="{Binding DragMoveCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding MiniMizeWindownCommand}">
                    <materialDesign:PackIcon Foreground="Black" Kind="WindowMinimize" />
                </Button>
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding MaximizeWindownCommand}">
                    <materialDesign:PackIcon Foreground="Black" Kind="WindowMaximize" />
                </Button>
                <Button Background="OrangeRed" Command="{Binding CloseWindownCommand}">
                    <materialDesign:PackIcon Kind="Close" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <ContentControl Content="{Binding CurrentViewModel}" />
        </Grid>
    </Grid>
</Window>