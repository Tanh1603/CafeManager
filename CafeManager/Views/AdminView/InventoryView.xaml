<UserControl
    x:Class="CafeManager.WPF.Views.AdminView.InventoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:addview="clr-namespace:CafeManager.WPF.Views.AddUpdateView"
    xmlns:adminviews="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:CafeManager.WPF.Services.Converter"
    xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    xmlns:view="clr-namespace:CafeManager.WPF.Views"
    xmlns:vm="clr-namespace:CafeManager.WPF.ViewModels.AdminViewModel"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <service:RowIndexConverter x:Key="RowIndexConverter" />
        <service:DateTimeToDateOnlyConverter x:Key="DateTimeToDateOnlyConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid Margin="10,0">
            <Grid.RowDefinitions>

                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--  Page Title  -->
            <TextBlock
                Grid.Row="0"
                Margin="0,20,0,10"
                HorizontalAlignment="Left"
                FontSize="32"
                FontWeight="SemiBold"
                Foreground="#ddd1c3"
                Text="Tồn kho" />

            <Separator
                Grid.Row="0"
                Width="120"
                Height="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#f5f5f5" />

            <StackPanel
                Grid.Row="1"
                Margin="10"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#602414"
                    Text="Vật liệu: " />
                <ComboBox
                    x:Name="cbmaterial"
                    Width="150"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    ItemsSource="{Binding ListMaterialDTO}"
                    SelectedItem="{Binding SelectedMaterial}"
                    Style="{StaticResource ComboBoxStyle}">
                    <ComboBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource ComboBoxItemStyle}" TargetType="ComboBoxItem">
                            <Setter Property="Width" Value="{Binding ActualWidth, ElementName=cbmaterial}" />
                            <Setter Property="Height" Value="{Binding ActualHeight, ElementName=cbmaterial}" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Materialname}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#602414"
                    Text="Nhà sản xuất: " />
                <ComboBox
                    x:Name="cbsupplier"
                    Width="150"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    ItemsSource="{Binding ListSupplierDTO}"
                    SelectedItem="{Binding SelectedSupplier}"
                    Style="{StaticResource ComboBoxStyle}">
                    <ComboBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource ComboBoxItemStyle}" TargetType="ComboBoxItem">
                            <Setter Property="Width" Value="{Binding ActualWidth, ElementName=cbsupplier}" />
                            <Setter Property="Height" Value="{Binding ActualHeight, ElementName=cbsupplier}" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Suppliername}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#602414"
                    Text="NSX: " />
                <DatePicker
                    Width="120"
                    VerticalAlignment="Center"
                    CalendarStyle="{StaticResource MaterialDesignCalendarPortrait}"
                    SelectedDate="{Binding FilterManufacturedate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Style="{StaticResource DatePicker}"
                    Tag="Visible" />

                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#602414"
                    Text="HSD: " />
                <DatePicker
                    Width="120"
                    VerticalAlignment="Center"
                    CalendarStyle="{StaticResource MaterialDesignCalendarPortrait}"
                    SelectedDate="{Binding FilterExpirationdate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Style="{StaticResource DatePicker}"
                    Tag="Visible" />

                <StackPanel Orientation="Horizontal" Visibility="{Binding ConsumedPage, Converter={StaticResource BoolToVis}}">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#602414"
                        Text="Ngày sử dụng: " />

                    <DatePicker
                        Width="120"
                        VerticalAlignment="Center"
                        CalendarStyle="{StaticResource MaterialDesignCalendarPortrait}"
                        SelectedDate="{Binding SelectedUsageDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        Style="{StaticResource DatePicker}"
                        Tag="Visible" />
                </StackPanel>
                <Button
                    Width="Auto"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Command="{Binding FilterExpiringCommand}"
                    Style="{StaticResource DynamicButtonStyle}"
                    Visibility="{Binding InventoryPage, Converter={StaticResource BoolToVis}}">
                    <TextBlock Margin="5" Text="Sắp hết hạn" />
                </Button>

                <Button
                    Grid.Column="1"
                    Width="120"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    Command="{Binding OpenMaterialViewCommand}"
                    Style="{StaticResource addButton}">
                    <StackPanel Orientation="Horizontal">
                        <ma:PackIconMaterial
                            Width="11"
                            Height="11"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Kind="Information" />
                        <TextBlock Text="Chi tiết vật liệu" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <Border Grid.Row="2" VerticalAlignment="Top">
                <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" Style="{DynamicResource tabControlStyle}">
                    <TabItem Header="Đã dùng" Style="{DynamicResource tabItemStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <DataGrid
                                x:Name="SuppliersDataGrid"
                                Width="auto"
                                VerticalAlignment="Top"
                                AlternationCount="{Binding ListConsumedMaterialDTO.Count}"
                                CellStyle="{DynamicResource DataGridCellStyle1}"
                                ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                                ItemsSource="{Binding ListConsumedMaterialDTO}"
                                RowStyle="{DynamicResource DataGridRowStyle1}"
                                Style="{DynamicResource DataGridStyle1}">
                                <DataGrid.Columns>

                                    <DataGridTextColumn
                                        Width="auto"
                                        Header="STT"
                                        IsReadOnly="True">
                                        <DataGridTextColumn.Binding>
                                            <Binding
                                                Converter="{StaticResource RowIndexConverter}"
                                                Path="(ItemsControl.AlternationIndex)"
                                                RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Materialsupplier.Material.Materialname}"
                                        CanUserResize="False"
                                        Header="Tên vật tư"
                                        IsReadOnly="True" />

                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Materialsupplier.Supplier.Suppliername}"
                                        CanUserResize="False"
                                        Header="Nhà cung cấp"
                                        IsReadOnly="True" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Materialsupplier.Manufacturedate, Converter={StaticResource DateTimeToDateOnlyConverter}}"
                                        CanUserResize="False"
                                        Header="Ngày sản xuất"
                                        IsReadOnly="True" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Materialsupplier.Expirationdate, Converter={StaticResource DateTimeToDateOnlyConverter}}"
                                        CanUserResize="False"
                                        Header="Ngày hết hạn"
                                        IsReadOnly="True" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Materialsupplier.Original}"
                                        CanUserResize="False"
                                        Header="Nguồn gốc"
                                        IsReadOnly="True" />

                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Materialsupplier.Manufacturer}"
                                        CanUserResize="False"
                                        Header="Nhà sản xuất"
                                        IsReadOnly="True" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Materialsupplier.Price}"
                                        CanUserResize="False"
                                        Header="Giá"
                                        IsReadOnly="True" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Usagedate, Mode=OneWay}"
                                        CanUserResize="False"
                                        Header="Ngày sử dụng"
                                        IsReadOnly="True" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Quantity, Mode=OneWay}"
                                        CanUserResize="False"
                                        Header="Sử dụng"
                                        IsReadOnly="True" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Tồn kho" Style="{DynamicResource tabItemStyle}">
                        <DataGrid
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding ListInventoryDTO.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding ListInventoryDTO}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Material.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Supplier.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturedate, Converter={StaticResource DateTimeToDateOnlyConverter}}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Expirationdate, Converter={StaticResource DateTimeToDateOnlyConverter}}"
                                    CanUserResize="False"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalQuantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Header="Số lượng"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Đã sử dụng hết" Style="{DynamicResource tabItemStyle}">
                        <DataGrid
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding ListUsedUp.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding ListUsedUp}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Material.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Supplier.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturedate, Converter={StaticResource DateTimeToDateOnlyConverter}}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Expirationdate, Converter={StaticResource DateTimeToDateOnlyConverter}}"
                                    CanUserResize="False"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalQuantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Foreground="Red"
                                    Header="Số lượng"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Hết hạn sử dụng" Style="{DynamicResource tabItemStyle}">
                        <DataGrid
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding ListExpriedDTO.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding ListExpriedDTO}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Material.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Supplier.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturedate, Converter={StaticResource DateTimeToDateOnlyConverter}}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Expirationdate, Converter={StaticResource DateTimeToDateOnlyConverter}}"
                                    CanUserResize="False"
                                    Foreground="Red"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalQuantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Header="Số lượng"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Border>

            <Grid Grid.Row="3">
                <!--  ConsumedPage  -->
                <Grid
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Visibility="{Binding ConsumedPage, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignFlatDarkButton}" TargetType="Button">
                                <Setter Property="Margin" Value="10,0" />
                            </Style>
                        </StackPanel.Resources>
                        <Button Command="{Binding ConsumedFirstPageCommand}">
                            <materialDesign:PackIcon Kind="SkipBackwardOutline" />
                        </Button>

                        <Button Command="{Binding ConsumedPreviousPageCommand}">
                            <materialDesign:PackIcon Kind="SkipPreviousOutline" />
                        </Button>

                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#dac5b4"
                            Text="{Binding ConsumedPageUI}" />

                        <Button Command="{Binding ConsumedNextPageCommand}">
                            <materialDesign:PackIcon Kind="SkipNextOutline" />
                        </Button>

                        <Button Command="{Binding ConsumedLastPageCommand}">
                            <materialDesign:PackIcon Kind="SkipForwardOutline" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  InventoryPage  -->
                <Grid
                    Margin="10"
                    HorizontalAlignment="Center"
                    Visibility="{Binding InventoryPage, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal">

                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignFlatDarkButton}" TargetType="Button">
                                <Setter Property="Margin" Value="10,0" />
                            </Style>
                        </StackPanel.Resources>
                        <Button Command="{Binding InventoryFirstPageCommand}">
                            <materialDesign:PackIcon Kind="SkipBackwardOutline" />
                        </Button>

                        <Button Command="{Binding InventoryPreviousPageCommand}">
                            <materialDesign:PackIcon Kind="SkipPreviousOutline" />
                        </Button>

                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#dac5b4"
                            Text="{Binding InventoryPageUI}" />

                        <Button Command="{Binding InventoryNextPageCommand}">
                            <materialDesign:PackIcon Kind="SkipNextOutline" />
                        </Button>

                        <Button Command="{Binding InventoryLastPageCommand}">
                            <materialDesign:PackIcon Kind="SkipForwardOutline" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  Used up page  -->
                <Grid
                    Margin="10"
                    HorizontalAlignment="Center"
                    Visibility="{Binding UsedUpPage, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal">

                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignFlatDarkButton}" TargetType="Button">
                                <Setter Property="Margin" Value="10,0" />
                            </Style>
                        </StackPanel.Resources>
                        <Button Command="{Binding UsedUpFirstPageCommand}">
                            <materialDesign:PackIcon Kind="SkipBackwardOutline" />
                        </Button>

                        <Button Command="{Binding UsedUpPreviousPageCommand}">
                            <materialDesign:PackIcon Kind="SkipPreviousOutline" />
                        </Button>

                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#dac5b4"
                            Text="{Binding UsedUpPageUI}" />

                        <Button Command="{Binding UsedUpNextPageCommand}">
                            <materialDesign:PackIcon Kind="SkipNextOutline" />
                        </Button>

                        <Button Command="{Binding UsedUpLastPageCommand}">
                            <materialDesign:PackIcon Kind="SkipForwardOutline" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  Expired page  -->
                <Grid
                    Margin="10"
                    HorizontalAlignment="Center"
                    Visibility="{Binding ExpiredPage, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal">

                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignFlatDarkButton}" TargetType="Button">
                                <Setter Property="Margin" Value="10,0" />
                            </Style>
                        </StackPanel.Resources>
                        <Button Command="{Binding ExpiredFirstPageCommand}">
                            <materialDesign:PackIcon Kind="SkipBackwardOutline" />
                        </Button>

                        <Button Command="{Binding ExpiredPreviousPageCommand}">
                            <materialDesign:PackIcon Kind="SkipPreviousOutline" />
                        </Button>

                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#dac5b4"
                            Text="{Binding ExpiredPageUI}" />

                        <Button Command="{Binding ExpiredNextPageCommand}">
                            <materialDesign:PackIcon Kind="SkipNextOutline" />
                        </Button>

                        <Button Command="{Binding ExpiredLastPageCommand}">
                            <materialDesign:PackIcon Kind="SkipForwardOutline" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <materialDesign:DialogHost
            Grid.ColumnSpan="2"
            Background="Transparent"
            DialogTheme="Inherit"
            IsOpen="{Binding IsOpenMaterialView}"
            OverlayBackground="{DynamicResource PrimaryHueDarkBrush}"
            Style="{StaticResource MaterialDesignEmbeddedDialogHost}">

            <materialDesign:DialogHost.DialogBackground>
                <SolidColorBrush Color="Transparent" />
            </materialDesign:DialogHost.DialogBackground>

            <materialDesign:DialogHost.DialogContent>
                <ContentControl Content="{Binding MaterialVM}" />
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
        <Grid
            Background="White"
            Opacity="0.3"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource infoText}" Text="Đang tải tài nguyên.." />
                <ProgressBar
                    Width="50"
                    Height="50"
                    IsIndeterminate="True"
                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                    Value="35" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>