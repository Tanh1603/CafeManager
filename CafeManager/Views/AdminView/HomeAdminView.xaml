<UserControl
    x:Class="CafeManager.WPF.Views.AdminView.HomeAdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adminviewmodel="clr-namespace:CafeManager.WPF.ViewModels.AdminViewModel"
    xmlns:converter="clr-namespace:CafeManager.WPF.Services.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    d:DataContext="{d:DesignInstance Type=adminviewmodel:HomeViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:CurrencyConverter x:Key="CurrencyConverter" />

    </UserControl.Resources>
    <Grid>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="1.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <Grid Margin="0,20,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel>

                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            FontSize="32"
                            FontWeight="SemiBold"
                            Foreground="#dac5b4"
                            Text="Thống kê" />
                        <Separator
                            Width="150"
                            Height="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="#f5f5f5" />
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,10,0,0">

                        <Border Padding="10,0,10,0" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">

                                    <GradientStop Offset="1" Color="#fee3d4" />
                                    <GradientStop Offset="0" Color="#f2ccb7" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        FontWeight="Bold"
                                        Style="{StaticResource infoText}"
                                        Text="Từ:" />
                                    <DatePicker
                                        Grid.Column="1"
                                        Margin="0,15,0,15"
                                        CalendarStyle="{StaticResource MaterialDesignCalendarPortrait}"
                                        SelectedDate="{Binding From}"
                                        Style="{StaticResource DatePicker}"
                                        Tag="Chọn ngày" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        FontWeight="Bold"
                                        Style="{StaticResource infoText}"
                                        Text="Đến:" />
                                    <DatePicker
                                        Grid.Column="1"
                                        CalendarStyle="{StaticResource MaterialDesignCalendarPortrait}"
                                        SelectedDate="{Binding To}"
                                        Style="{StaticResource DatePicker}"
                                        Tag="Chọn ngày" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1" Margin="10">
                    <Border Padding="10" CornerRadius="10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Offset="1" Color="#fee3d4" />
                                <GradientStop Offset="0" Color="#f2ccb7" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.IsSharedSizeScope="True">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Margin="0,0,0,5">
                                    <Border Padding="5" CornerRadius="10">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0" Color="#9c6d3f" />
                                                <GradientStop Offset="1" Color="#cb925d" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <ma:PackIconMaterial
                                                MinWidth="25"
                                                MinHeight="25"
                                                VerticalAlignment="Center"
                                                Foreground="#fee3d4"
                                                Kind="Cash" />
                                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Style="{StaticResource statisText}" Text="Doanh thu: " />
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock
                                                    Foreground="#DEDEDE"
                                                    Style="{StaticResource statisText}"
                                                    Text="{Binding Revenue, Converter={StaticResource CurrencyConverter}}" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <Grid
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,0,5">
                                    <Border Padding="5" CornerRadius="10">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0" Color="#9c6d3f" />
                                                <GradientStop Offset="1" Color="#cb925d" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <ma:PackIconMaterial
                                                MinWidth="25"
                                                MinHeight="25"
                                                VerticalAlignment="Center"
                                                Foreground="#fee3d4"
                                                Kind="Truck" />
                                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Style="{StaticResource statisText}" Text="Nguyên liệu: " />
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock
                                                    Foreground="#DEDEDE"
                                                    Style="{StaticResource statisText}"
                                                    Text="{Binding TotalMaterialSupplier}" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <Grid
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,0,5">
                                    <Border Padding="5" CornerRadius="10">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0" Color="#9c6d3f" />
                                                <GradientStop Offset="1" Color="#cb925d" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <ma:PackIconMaterial
                                                MinWidth="25"
                                                MinHeight="25"
                                                VerticalAlignment="Center"
                                                Foreground="#fee3d4"
                                                Kind="InvoiceText" />
                                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Style="{StaticResource statisText}" Text="Hóa đơn: " />
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock
                                                    Foreground="#DEDEDE"
                                                    Style="{StaticResource statisText}"
                                                    Text="{Binding TotalInvoice}" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>

                            <Grid Grid.Column="1" Grid.IsSharedSizeScope="True">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Column="1" Margin="10,0,0,5">
                                    <Border Padding="5" CornerRadius="10">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0" Color="#9c6d3f" />
                                                <GradientStop Offset="1" Color="#cb925d" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="auto" SharedSizeGroup="Label2" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <ma:PackIconMaterial
                                                MinWidth="25"
                                                MinHeight="25"
                                                VerticalAlignment="Center"
                                                Foreground="#fee3d4"
                                                Kind="AccountCircle" />
                                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Style="{StaticResource statisText}" Text="Nhân viên: " />
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock
                                                    Foreground="#DEDEDE"
                                                    Style="{StaticResource statisText}"
                                                    Text="{Binding TotalStaff}" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <Grid
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="10,0,0,5">
                                    <Border Padding="5" CornerRadius="10">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0" Color="#9c6d3f" />
                                                <GradientStop Offset="1" Color="#cb925d" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="auto" SharedSizeGroup="Label2" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <ma:PackIconMaterial
                                                MinWidth="25"
                                                MinHeight="25"
                                                VerticalAlignment="Center"
                                                Foreground="#fee3d4"
                                                Kind="GlassCocktail" />
                                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Style="{StaticResource statisText}" Text="Thực đơn: " />
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock
                                                    Foreground="#DEDEDE"
                                                    Style="{StaticResource statisText}"
                                                    Text="{Binding TotalFood}" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <Grid
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="10,0,0,5">
                                    <Border Padding="5" CornerRadius="10">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0" Color="#9c6d3f" />
                                                <GradientStop Offset="1" Color="#cb925d" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="auto" SharedSizeGroup="Label2" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <ma:PackIconMaterial
                                                MinWidth="25"
                                                MinHeight="25"
                                                VerticalAlignment="Center"
                                                Foreground="#fee3d4"
                                                Kind="TableFurniture" />
                                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Style="{StaticResource statisText}" Text="Bàn: " />
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock
                                                    Foreground="#DEDEDE"
                                                    Style="{StaticResource statisText}"
                                                    Text="{Binding TotalTable}" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0,10,10,10">
                    <Border Padding="5" CornerRadius="10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Offset="1" Color="#fee3d4" />
                                <GradientStop Offset="0" Color="#f2ccb7" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <lvc:CartesianChart
                            
                            Series="{Binding RevenueSeries}"
                            Zoom="{Binding ZoomingMode}">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis
                                    Title="Date Range"
                                    LabelFormatter="{Binding XFormatter}"
                                     />
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Revenue" LabelFormatter="{Binding YFormatter}" />
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Margin="10,0,10,10">
                <Border CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Offset="1" Color="#7A4E36" />
                            <GradientStop Offset="0" Color="#66402F" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Margin="0,10,0,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#dac5b4"
                                Text="Thực đơn yêu thích" />
                        </Grid>
