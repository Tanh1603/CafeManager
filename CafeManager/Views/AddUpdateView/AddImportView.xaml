<UserControl
    x:Class="CafeManager.WPF.Views.AddUpdateView.AddImportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:addview="clr-namespace:CafeManager.WPF.Views.AddUpdateView"
    xmlns:addviewmodel="clr-namespace:CafeManager.WPF.ViewModels.AddViewModel"
    xmlns:adminviews="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:CafeManager.WPF.Views"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:CafeManager.WPF.Services.Converter"
    xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    xmlns:view="clr-namespace:CafeManager.WPF.Views"
    xmlns:vm="clr-namespace:CafeManager.WPF.ViewModels.AddViewModel"
    Width="900"
    Height="Auto"
    d:DataContext="{d:DesignInstance Type=addviewmodel:AddImportViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <service:RowIndexConverter x:Key="RowIndexConverter" />
        <DataTemplate DataType="{x:Type vm:AddMaterialViewModel}">
            <addview:AddMaterialView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddSuppierViewModel}">
            <addview:AddSupplierView />
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*" />
            <ColumnDefinition Width="109*" />
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" CornerRadius="10 10 10 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Offset="0" Color="#d4b096" />
                    <GradientStop Offset="1" Color="#dac5b4" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="40,0,40,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="220" />
                    <RowDefinition Height="240" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Add Button  -->
                <!--<Button Command="{Binding OpenAddImportCommand}" Style="{StaticResource addButton}">
                    <StackPanel Orientation="Horizontal">
                        <ma:PackIconMaterial
                            Width="11"
                            Height="11"
                            Margin="0,1,8,0"
                            VerticalAlignment="Center"
                            Kind="Plus" />
                        <TextBlock Text="Thêm phiếu nhập" />
                    </StackPanel>
                </Button>-->

                <!--  Thông tin nhập hàng  -->

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Width="auto"
                        Margin="0,10,0,0"
                        Padding="8,0,3,0"
                        BorderBrush="#602414"
                        BorderThickness="2"
                        CornerRadius="10">
                        <Grid Margin="0,0,5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Foreground="#5f2414"
                                    Text="Thông tin nhập hàng" />
                                <ma:PackIconMaterial
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Kind="PencilOutline"
                                    Style="{StaticResource gridButtonIcon}"
                                    Visibility="{Binding IsUpdating, Converter={StaticResource BoolToVis}}" />

                            </Grid>

                            <Grid Grid.Row="1" Margin="5,0,5,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox
                                        Margin="10,5"
                                        materialDesign:HintAssist.Hint="Nhà cung cấp"
                                        DisplayMemberPath="Suppliername"
                                        ItemsSource="{Binding ListSupplier}"
                                        SelectedItem="{Binding ModifyImport.ImportSupplier, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        SelectedValue="{Binding Suppliername}" />

                                    <Button
                                        Grid.Column="1"
                                        Width="70"
                                        Height="25"
                                        Margin="0,5,5,5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Command="{Binding OpenAddSupplierCommand}"
                                        Style="{StaticResource addButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <ma:PackIconMaterial
                                                Width="11"
                                                Height="11"
                                                Margin="0,1,5,0"
                                                VerticalAlignment="Center"
                                                Kind="Plus" />
                                            <TextBlock FontSize="11" Text="Nhập mới" />
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="Người giao: " />
                                    <TextBox
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{Binding ModifyImport.Deliveryperson, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="Điện thoại: " />
                                    <TextBox
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{Binding ModifyImport.Phone, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </Grid>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="Công ty giao: " />
                                    <TextBox
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{Binding ModifyImport.Shippingcompany, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </Grid>

                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="Người nhận: " />
                                    <ComboBox
                                        Grid.Column="1"
                                        Margin="10,5"
                                        materialDesign:HintAssist.Hint="Nhân viên"
                                        DisplayMemberPath="Staffname"
                                        ItemsSource="{Binding ListStaff}"
                                        SelectedItem="{Binding ModifyImport.ReceivedStaff, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        SelectedValue="{Binding Staffname}" />
                                </Grid>

                                <Grid Grid.Row="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Bottom" Text="Ngày giao: " />
                                        <DatePicker
                                            Grid.Column="1"
                                            Width="100"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            materialDesign:HintAssist.Hint="Pick Date"
                                            materialDesign:TextFieldAssist.HasClearButton="True"
                                            SelectedDate="{Binding ModifyImport.Receiveddate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                                        <materialDesign:TimePicker
                                            x:Name="PresetTimePicker"
                                            Grid.Column="2"
                                            Width="100"
                                            Margin="20,0,0,0"
                                            Padding="0,10,0,0"
                                            materialDesign:HintAssist.Hint="Pick Time"
                                            materialDesign:TextFieldAssist.HasClearButton="True"
                                            Is24Hours="True"
                                            SelectedTime="{Binding ModifyImport.Receiveddate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    </Grid>
                                </Grid>

                            </Grid>
                        </Grid>
                    </Border>

                    <!--  Thêm mới  -->
                    <Border
                        Grid.Column="1"
                        Width="auto"
                        Margin="10,10,0,0"
                        Padding="8,0,3,0"
                        BorderBrush="#602414"
                        BorderThickness="2"
                        CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Foreground="#5f2414"
                                    Text="Thêm thông tin" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Foreground="#5f2414"
                                    Text="Đang thêm mới ..."
                                    Visibility="{Binding IsAddingImportDetail, Converter={StaticResource BoolToVis}}" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Foreground="#5f2414"
                                    Text="Đang chỉnh sửa ..."
                                    Visibility="{Binding IsUpdatingImportDetail, Converter={StaticResource BoolToVis}}" />
                            </Grid>

                            <!--  Nhà cung cấp và vật liệu  -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ComboBox
                                    Grid.Column="0"
                                    Margin="10,5"
                                    materialDesign:HintAssist.Hint="Vật liệu"
                                    DisplayMemberPath="Materialname"
                                    ItemsSource="{Binding ListMaterial}"
                                    SelectedItem="{Binding CurrentImportDetail.ModifyMaterialDetail.CurrentMaterial, Mode=TwoWay}"
                                    SelectedValue="{Binding Materialname}" />

                                <Button
                                    Grid.Column="1"
                                    Width="70"
                                    Height="25"
                                    Margin="0,5,5,5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Command="{Binding OpenAddMaterialCommand}"
                                    Style="{StaticResource addButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ma:PackIconMaterial
                                            Width="11"
                                            Height="11"
                                            Margin="0,1,5,0"
                                            VerticalAlignment="Center"
                                            Kind="Plus" />
                                        <TextBlock FontSize="11" Text="Nhập mới" />
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!--  Chi tiết đơn hàng  -->
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="NSX: " />
                                    <DatePicker
                                        Grid.Column="1"
                                        Width="100"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        materialDesign:HintAssist.Hint="Pick Date"
                                        materialDesign:TextFieldAssist.HasClearButton="True"
                                        SelectedDate="{Binding CurrentImportDetail.ModifyMaterialDetail.Manufacturedate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="HSD: " />
                                    <DatePicker
                                        Grid.Column="1"
                                        Width="100"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        materialDesign:HintAssist.Hint="Pick Date"
                                        materialDesign:TextFieldAssist.HasClearButton="True"
                                        SelectedDate="{Binding CurrentImportDetail.ModifyMaterialDetail.Expirationdate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="Nhà sản xuất: " />
                                    <TextBox
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{Binding CurrentImportDetail.ModifyMaterialDetail.Manufacturer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </Grid>

                                <Grid Grid.Row="2" Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="Xuất xứ: " />
                                    <TextBox
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{Binding CurrentImportDetail.ModifyMaterialDetail.Original, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </Grid>

                                <Grid Grid.Row="3" Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="Giá: " />
                                    <TextBox
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{Binding CurrentImportDetail.ModifyMaterialDetail.Price, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </Grid>

                                <Grid
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="Số lượng: " />
                                    <TextBox
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{Binding CurrentImportDetail.Quantity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </Grid>

                                <Button
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Width="80"
                                    Height="25"
                                    Margin="0,5,10,5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Command="{Binding ClearAddImportDetailCommand}"
                                    Style="{StaticResource addButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ma:PackIconMaterial
                                            Width="11"
                                            Height="11"
                                            Margin="0,1,5,0"
                                            VerticalAlignment="Center"
                                            Kind="Refresh" />
                                        <TextBlock FontSize="11" Text="Tạo mới" />
                                    </StackPanel>
                                </Button>

                                <Button
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Width="80"
                                    Height="25"
                                    Margin="0,5,10,5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Command="{Binding ModifyImportDetailListCommand}"
                                    Style="{StaticResource addButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="11" Text="Xác nhận" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="2" Margin="0,10,0,0">
                    <DataGrid
                        x:Name="ImportDetailsDataGrid"
                        VerticalAlignment="Top"
                        AlternationCount="{Binding ModifyImport.ListImportDetailDTO.Count}"
                        CellStyle="{DynamicResource DataGridCellStyle1}"
                        ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                        ItemsSource="{Binding ModifyImport.ListImportDetailDTO}"
                        RowStyle="{DynamicResource DataGridRowStyle1}"
                        Style="{DynamicResource DataGridStyle1}">
                        <DataGrid.Columns>

                            <DataGridTextColumn
                                Width="Auto"
                                Header="STT"
                                IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding
                                        Converter="{StaticResource RowIndexConverter}"
                                        Path="(ItemsControl.AlternationIndex)"
                                        RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ModifyMaterialDetail.CurrentMaterial.Materialname}"
                                CanUserResize="False"
                                Header="Tên vật tư"
                                IsReadOnly="True" />

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ModifyMaterialDetail.Manufacturer}"
                                CanUserResize="False"
                                Header="Nhà sản xuất"
                                IsReadOnly="True" />

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ModifyMaterialDetail.Price}"
                                CanUserResize="False"
                                Header="Giá"
                                IsReadOnly="True" />

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Quantity}"
                                CanUserResize="False"
                                Header="Số lượng"
                                IsReadOnly="True" />


                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ModifyMaterialDetail.CurrentMaterial.Unit}"
                                CanUserResize="False"
                                Header="Đơn vị"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ModifyMaterialDetail.Expirationdate, StringFormat=\{0:dd/MM/yyyy\}}"
                                CanUserResize="False"
                                Header="Ngày hết hạn"
                                IsReadOnly="True" />

                            <DataGridTemplateColumn
                                Width="Auto"
                                Header="Tùy chỉnh"
                                IsReadOnly="True">

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button
                                                Command="{Binding DataContext.UpdateImportDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource gridEditButton}">
                                                <ma:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}" />
                                            </Button>
                                            <Button
                                                Margin="5,0,0,0"
                                                Command="{Binding DataContext.DeleteImportDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource gridRemoveButton}">
                                                <ma:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}" />
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="1"
                        Width="80"
                        Height="25"
                        Margin="5"
                        Command="{Binding SubmitModifyImportCommand}"
                        Style="{StaticResource addButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Xác nhận" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Column="2"
                        Width="60"
                        Height="25"
                        Margin="5"
                        Command="{Binding DataContext.CloseAddImportCommand, RelativeSource={RelativeSource AncestorType=adminviews:ImportView}}"
                        Style="{StaticResource addButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Thoát" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <materialDesign:DialogHost
            Grid.ColumnSpan="2"
            Background="Transparent"
            DialogTheme="Inherit"
            IsOpen="{Binding IsOpenAddMaterialSupplier}"
            OverlayBackground="{DynamicResource PrimaryHueDarkBrush}"
            Style="{StaticResource MaterialDesignEmbeddedDialogHost}">
            <materialDesign:DialogHost.DialogBackground>
                <SolidColorBrush Color="Transparent" />
            </materialDesign:DialogHost.DialogBackground>
            <materialDesign:DialogHost.DialogContent>
                <ContentControl Content="{Binding SelectedViewModel}" />
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>