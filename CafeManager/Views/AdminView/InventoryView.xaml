<UserControl
    x:Class="CafeManager.WPF.Views.AdminView.InventoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:CafeManager.WPF.Services.Converter"
    xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    xmlns:view="clr-namespace:CafeManager.WPF.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <service:RowIndexConverter x:Key="RowIndexConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid Margin="20,10">
            <Grid.RowDefinitions>

                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Page Title  -->
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Left"
                FontSize="32"
                FontWeight="SemiBold"
                Foreground="#ddd1c3"
                Text="Tồn kho" />

            <Separator
                Grid.Row="0"
                Width="120"
                Height="1"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#f5f5f5" />

            <TextBlock
                Grid.Row="1"
                Margin="0,0,215,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#602414"
                Text="Filter by" />

            <!--  Filter Textbox  -->
            <Grid
                Grid.Row="1"
                Width="200"
                HorizontalAlignment="Right">
                <TextBlock
                    Margin="15,0"
                    VerticalAlignment="Center"
                    Panel.ZIndex="1"
                    Foreground="#9c6d3f"
                    IsHitTestVisible="False"
                    Text="Search in Members..."
                    Visibility="{Binding ElementName=txtFilter, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}" />
                <TextBox x:Name="txtFilter" Style="{StaticResource textBoxFilter}" />
                <ma:PackIconMaterial
                    Width="15"
                    Height="15"
                    Margin="0,0,15,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#d5b096"
                    Kind="Magnify" />
            </Grid>

            <Border Grid.Row="2">
                <TabControl Style="{DynamicResource tabControlStyle}">
                    <TabItem Header="Đã dùng" Style="{DynamicResource tabItemStyle}">

                        <DataGrid
                            x:Name="SuppliersDataGrid"
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding ListConsumedMaterialDTO.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding ListConsumedMaterialDTO}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Material.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Supplier.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Manufacturedate}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Expirationdate}"
                                    CanUserResize="False"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materialsupplier.Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Quantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Header="Số lượng sử dụng"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Tồn kho" Style="{DynamicResource tabItemStyle}">
                        <DataGrid
                            Width="auto"
                            VerticalAlignment="Top"
                            AlternationCount="{Binding ListInventoryDTO.Count}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            ItemsSource="{Binding ListInventoryDTO}"
                            RowStyle="{DynamicResource DataGridRowStyle1}"
                            Style="{DynamicResource DataGridStyle1}">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="auto"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding
                                            Converter="{StaticResource RowIndexConverter}"
                                            Path="(ItemsControl.AlternationIndex)"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Material.Materialname}"
                                    CanUserResize="False"
                                    Header="Tên vật tư"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Supplier.Suppliername}"
                                    CanUserResize="False"
                                    Header="Nhà cung cấp"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturedate}"
                                    CanUserResize="False"
                                    Header="Ngày sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Expirationdate}"
                                    CanUserResize="False"
                                    Header="Ngày hết hạn"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Original}"
                                    CanUserResize="False"
                                    Header="Nguồn gốc"
                                    IsReadOnly="True" />

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Manufacturer}"
                                    CanUserResize="False"
                                    Header="Nhà sản xuất"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Price}"
                                    CanUserResize="False"
                                    Header="Giá"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalQuantity, Mode=OneWay}"
                                    CanUserResize="False"
                                    Header="Số lượng sử dụng"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!--<materialDesign:DialogHost
           Background="Transparent"
           CloseOnClickAway="True"
           DialogTheme="Inherit"
           IsOpen="{Binding IsOpenAddSupplier}"
           OverlayBackground="{DynamicResource PrimaryHueDarkBrush}"
           Placement="Mouse"
           Style="{StaticResource MaterialDesignEmbeddedDialogHost}">
            <materialDesign:DialogHost.DialogContent>
                <ContentControl Content="{Binding AddSupplierVM}" />
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>-->
    </Grid>
</UserControl>