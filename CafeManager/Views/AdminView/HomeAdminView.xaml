<UserControl
    x:Class="CafeManager.WPF.Views.AdminView.HomeAdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adminviewmodel="clr-namespace:CafeManager.WPF.ViewModels.AdminViewModel"
    xmlns:converter="clr-namespace:CafeManager.WPF.Services.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:CafeManager.WPF.Views.AdminView"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    Name="dashboardview"
    d:DataContext="{d:DesignInstance Type=adminviewmodel:HomeViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:CurrencyConverter x:Key="CurrencyConverter" />
        <converter:EqualsConverter x:Key="EqualsConverter" />
        <converter:IconConverter x:Key="IconConverter" />
    </UserControl.Resources>
    <Grid>

        <Grid Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2.4*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <Grid Margin="0,20,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel>

                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            FontSize="32"
                            FontWeight="SemiBold"
                            Foreground="#dac5b4"
                            Text="Thống kê" />
                        <Separator
                            Width="150"
                            Height="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="#f5f5f5" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1" Margin="0,20,0,0">

                    <Border Padding="10,0,10,0" CornerRadius="10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">

                                <GradientStop Offset="1" Color="#fee3d4" />
                                <GradientStop Offset="0" Color="#f2ccb7" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Margin="0,0,5,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    FontWeight="Bold"
                                    Style="{StaticResource infoText}"
                                    Text="Từ:" />
                                <DatePicker
                                    Grid.Column="1"
                                    Margin="0,15,0,15"
                                    CalendarStyle="{StaticResource MaterialDesignCalendarPortrait}"
                                    SelectedDate="{Binding From}"
                                    Style="{StaticResource DatePicker}"
                                    Tag="Collapsed"
                                    Validation.ErrorTemplate="{StaticResource ErrorMessageReg}" />
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    FontWeight="Bold"
                                    Style="{StaticResource infoText}"
                                    Text="Đến:" />
                                <DatePicker
                                    Grid.Column="1"
                                    CalendarStyle="{StaticResource MaterialDesignCalendarPortrait}"
                                    SelectedDate="{Binding To}"
                                    Style="{StaticResource DatePicker}"
                                    Tag="Collapsed"
                                    Validation.ErrorTemplate="{StaticResource ErrorMessageReg}" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.RowSpan="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Margin="10,10,0,0">
                        <Border CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="0" Color="#CFA944" />
                                    <GradientStop Offset="1" Color="#FFDD3C" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />

                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="10,0,0,0">
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                                        <TextBlock Style="{StaticResource statisText}" Text="Doanh thu" />
                                        <TextBlock
                                            Foreground="#DEDEDE"
                                            Style="{StaticResource statisText}"
                                            Text="{Binding Revenue, Converter={StaticResource CurrencyConverter}}" />
                                    </StackPanel>
                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <ma:PackIconMaterial
                                        MinWidth="50"
                                        MinHeight="50"
                                        Foreground="#fee3d4"
                                        Kind="Cash" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" Margin="10,10,0,0">
                        <Border CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="0" Color="#319897" />
                                    <GradientStop Offset="1" Color="#52BD8F" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />

                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="10,0,0,0">
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                                        <TextBlock Style="{StaticResource statisText}" Text="Nguyên liệu" />
                                        <TextBlock
                                            Foreground="#DEDEDE"
                                            Style="{StaticResource statisText}"
                                            Text="{Binding TotalMaterialSupplier}" />
                                    </StackPanel>
                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <ma:PackIconMaterial
                                        MinWidth="50"
                                        MinHeight="50"
                                        Foreground="#fee3d4"
                                        Kind="Truck" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="1" Margin="10,10,0,0">
                        <Border CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="0" Color="#AF84A9" />
                                    <GradientStop Offset="1" Color="#D8B8CD" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />

                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="10,0,0,0">
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                                        <TextBlock Style="{StaticResource statisText}" Text="Hóa đơn" />
                                        <TextBlock
                                            Foreground="#DEDEDE"
                                            Style="{StaticResource statisText}"
                                            Text="{Binding TotalInvoice}" />
                                    </StackPanel>
                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <ma:PackIconMaterial
                                        MinWidth="50"
                                        MinHeight="50"
                                        Foreground="#fee3d4"
                                        Kind="InvoiceText" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="2" Margin="10,10,0,0">
                        <Border CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="0" Color="#EF7485" />
                                    <GradientStop Offset="1" Color="#F59BB1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />

                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="10,0,0,0">
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                                        <TextBlock Style="{StaticResource statisText}" Text="Nhân viên" />
                                        <TextBlock
                                            Foreground="#DEDEDE"
                                            Style="{StaticResource statisText}"
                                            Text="{Binding TotalStaff}" />
                                    </StackPanel>
                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <ma:PackIconMaterial
                                        MinWidth="50"
                                        MinHeight="50"
                                        Foreground="#fee3d4"
                                        Kind="NaturePeople" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="10,10,0,0">
                        <Border CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="0" Color="#704c52" />
                                    <GradientStop Offset="1" Color="#906e74" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />

                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="10,0,0,0">
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                                        <TextBlock Style="{StaticResource statisText}" Text="Bàn" />
                                        <TextBlock
                                            Foreground="#DEDEDE"
                                            Style="{StaticResource statisText}"
                                            Text="{Binding TotalTable}" />
                                    </StackPanel>
                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <ma:PackIconMaterial
                                        MinWidth="50"
                                        MinHeight="50"
                                        Foreground="#fee3d4"
                                        Kind="TableFurniture" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,10,0,0">
                        <Border CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="0" Color="#004E99" />
                                    <GradientStop Offset="1" Color="#438BD3" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />

                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="10,0,0,0">
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                                        <TextBlock Style="{StaticResource statisText}" Text="Thực đơn" />
                                        <TextBlock
                                            Foreground="#DEDEDE"
                                            Style="{StaticResource statisText}"
                                            Text="{Binding TotalFood}" />
                                    </StackPanel>
                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <ma:PackIconMaterial
                                        MinWidth="50"
                                        MinHeight="50"
                                        Foreground="#fee3d4"
                                        Kind="GlassCocktail" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,10,0,0">
                        <Border Padding="10" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="1" Color="#fee3d4" />
                                    <GradientStop Offset="0" Color="#f2ccb7" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>

                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="817*" />
                                        <ColumnDefinition Width="55*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <lvc:CartesianChart
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Series="{Binding ChartZoomCollection}"
                                        Zoom="X">

                                        <lvc:CartesianChart.AxisX>

                                            <lvc:Axis Title="Doanh thu theo ngày" Labels="{Binding LabelChartZoom}" />
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis
                                                Title="VNĐ"
                                                Foreground="#612e0f"
                                                LabelFormatter="{Binding YFormatterChartZoom}"
                                                MinValue="0" />
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">

                        <Grid Grid.Column="0" Margin="0,10,0,10">
                            <Border Padding="10" CornerRadius="10">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Offset="1" Color="#fee3d4" />
                                        <GradientStop Offset="0" Color="#f2ccb7" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <lvc:CartesianChart
                                        Grid.Row="1"
                                        Series="{Binding ChartColumnCollection}"
                                        Zoom="x">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Quản lí thu - chi theo tháng" Labels="{Binding LabelChartCol}">
                                                <lvc:Axis.Separator>
                                                    <lvc:Separator Step="1" />
                                                </lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis
                                                Title="VNĐ"
                                                Foreground="#612e0f"
                                                MinValue="0" />
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1" Margin="10,10,0,10">
                    <Border CornerRadius="10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Offset="1" Color="#7A4E36" />
                                <GradientStop Offset="0" Color="#886255" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Margin="0,15,0,0">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="28"
                                    FontWeight="Bold"
                                    Foreground="#dac5b4"
                                    Text="Thực đơn yêu thích" />
                            </Grid>
                            <ListBox
                                x:Name="listbox"
                                Grid.Row="1"
                                ItemsSource="{Binding MostSoldFood}"
                                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden">

                                <ListBox.ItemTemplate>

                                    <DataTemplate>
                                        <Border Padding="5" HorizontalAlignment="Stretch">

                                            <Grid Width="{Binding ActualWidth, ElementName=listbox}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />

                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid
                                                    Width="45"
                                                    Height="45"
                                                    Margin="25,0,0,0">
                                                    <Border Background="#612e0f" CornerRadius="10" />
                                                    <materialDesign:PackIcon
                                                        Width="25"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Foreground="#dac5b4"
                                                        Kind="{Binding Foodcategoryname, Converter={StaticResource IconConverter}}" />
                                                </Grid>

                                                <Grid
                                                    Grid.Column="1"
                                                    Margin="10,0,0,0"
                                                    HorizontalAlignment="Stretch">

                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        FontWeight="Bold"
                                                        Foreground="#dac5b4"
                                                        Text="{Binding Foodname}"
                                                        TextTrimming="CharacterEllipsis"
                                                        ToolTip="{Binding Foodname}" />
                                                </Grid>

                                                <Grid Grid.Column="2">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Foreground="#dac5b4"
                                                        Text="{Binding Price, Converter={StaticResource CurrencyConverter}}" />
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <uc:LoadingData Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>