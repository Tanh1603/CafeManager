<UserControl
    x:Class="CafeManager.WPF.Assets.UsersControls.infoTextInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CafeManager.WPF.Assets.UsersControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="InfoTextInput"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis" />
    </UserControl.Resources>
    <Grid>
        <TextBlock
            Margin="14,0"
            VerticalAlignment="Center"
            Panel.ZIndex="1"
            Foreground="#99703a"
            IsHitTestVisible="False"
            Text="{Binding ElementName=InfoTextInput, Path=Hint}"
            Visibility="{Binding ElementName=textBox, Path=Text.IsEmpty, Converter={StaticResource boolToVis}}" />
        <TextBox
            x:Name="textBox"
            IsReadOnly="{Binding ElementName=InfoTextInput, Path=IsReadOnly}"
            Style="{StaticResource textbox}"
            Text="{Binding ElementName=InfoTextInput, Path=Text, Mode=TwoWay}" />
    </Grid>
</UserControl>